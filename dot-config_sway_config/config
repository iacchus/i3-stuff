        # inactive_workspace #323232dd #323232dd #5c5c5c
        # inactive_workspace #323232dd #323232dd #cccccc
    # }
}

exec albert
exec copyq
exec espanso start
exec ydotoold

exec_always ~/.cargo/bin/swtchrd

